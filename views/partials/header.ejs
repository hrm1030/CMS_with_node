<!-- BEGIN HEADER -->
<div class="header">
    <div class="container">
        <a class="site-logo" href="/" style="margin-top: -25px;">
            <img src="../../images/logo.png" alt="Metronic FrontEnd">
        </a>

        <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>

        <!-- BEGIN NAVIGATION -->
        <div class="header-navigation pull-right font-transform-inherit">
            <ul>
                    <li><a href="/"><i class="icon-home"></i> Home</a></li>
                <% if(!session.token) {%>
                    <!-- <li><a href="/training">Training</a></li> -->
                    <li><a href="/auth/login"><i class="icon-login"></i> Sign in</a></li>
                    <li><a href="/auth/register"><i class="icon-user-follow"></i> Register</a></li>
                <%} else {%>
                    <% if(session.permission == 2) {%>
                    <li><a href="/search"><i class="icon-magnifier"></i> Search</a></li>
                    <%}%>
                    <% if(session.permission == 1) {%>
                    <li><a href="/admin"><i class="icon-equalizer"></i> Admin</a></li>
                    <%}%>
                    
                    <li class="menu-search">
                        <span class="sep"></span>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="javascript:;" style="margin-top: -10px;">
                                <img src="../../uploads/users/<%=session.photo%>" style="width: 45px; height: 45px;">
                                <%= session.name%> <%= session.surname %>
                            </a>
                            <ul class="dropdown-menu">
                              <li><a href="/auth/profile"><i class="icon-user"></i> View Profile</a></li>
                              <li><a href="/auth/logout"><i class="icon-power"></i> Logout</a></li>
                            </ul>
                        </li>
                    </li>
                <%}%>
                
            </ul>
        </div>
        <!-- END NAVIGATION -->
    </div>
</div>
<script src="../../js/header.js"></script>