<div class="main">
    <div class="admin-container">
        <ul class="breadcrumb">
        </ul>

        <div class="row">
            <div class="col-md-3">
                <div class="portlet box green">
                    <div class="portlet-title">
                      <div class="caption">
                        <i class="icon-tag"></i> <span>Industries</span>
                      </div>
                      <div class="actions">
                        <a href="javascript:;" class="btn btn-default btn-sm" id="btn_industry_add">
                            <i class="fa fa-plus"></i> Add 
                        </a>
                      </div>
                    </div>

                    <div class="portlet-body">
                        <table class="table table-striped table-hover table-bordered" id="industry_table">
							<thead>
                                <tr>
                                    <th width="60%">
                                        Industry
                                    </th>
                                    <th width="40%">
                                        Action
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                    <% industries.forEach(function(industry) {%>
                                        <tr industry_id="<%= industry._id%>">
                                            <td>
                                                <%= industry.name%>
                                            </td>
                                            <td>
                                                <a class="industry_edit btn btn-sm green" href="javascript:;" title="edit"><i class="fa fa-pencil"></i></a>
                                                <a class="industry_delete btn btn-sm red" href="javascript:;" title="delete"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    <%});%>
                                    
							</tbody>
							</table>
                    </div>
                </div>

            </div>
            <div class="col-md-9">
                <div class="portlet box green">
                    <div class="portlet-title">
                      <div class="caption">
                        <i class="icon-users"></i> <span>Users</span>
                      </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover" id="user_table">
							<thead>
                                <tr>
                                    <th>
                                        Full Name
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Membership
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        State
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
							</thead>
							<tbody>
                                <% users.forEach(function(user) {%>
                                <tr user_id="<%= user._id%>">
                                    <td>
                                        <%= user.name%> <%= user.surname%>
                                    </td>
                                    <td>
                                        <%= user.email%>
                                    </td>
                                    <td>
                                        <%= user.phone%>
                                    </td>
                                    <td>
                                        <%if( user.membership == 0) {%>
                                            <span class="label label-danger">Not veryfied</span>
                                        <%} else if (user.membership == 1) {%>
                                            <span class="label label-warning">Free</span>
                                        <%} else if(user.membership == 2) {%>
                                            <span class="label label-info">Common</span>
                                        <%} else if(user.membership == 3) {%>
                                            <span class="label label-primary">Medium</span>
                                        <%} else if(user.membership == 4) {%>
                                            <span class="label label-success">Advance</span>
                                        <%}%>
                                    </td>
                                    <td>
                                        <%= user.created_at%>
                                    </td>
                                    <td>
                                        <select class="form-control input-small state" name="state">
                                            <%if(user.state == 0){%>
                                                <option value="0" selected>Inactived</option>
                                                <option value="1">Actived</option>
                                            <%} else {%>
                                                <option value="0">Inactived</option>
                                                <option value="1" selected>Actived</option>
                                            <%}%>                                            
                                            
                                        </select>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm purple">Close</button>
                                    </td>
                                </tr>
                                <%});%>
							</tbody>
						</table>
                    </div>
                </div>

            </div>

        </div><hr>
        <div class="row">
            <div class="col-md-3">
                <div class="portlet box blue">
                    <div class="portlet-title">
                      <div class="caption">
                        <i class="icon-tag"></i> <span>Categories</span>
                      </div>
                      <div class="actions">
                        <a href="javascript:;" class="btn btn-default btn-sm" id="btn_add">
                            <i class="fa fa-plus"></i> Add 
                        </a>
                      </div>
                    </div>

                    <div class="portlet-body">
                        <table class="table table-striped table-hover table-bordered" id="category_table">
							<thead>
                                <tr>
                                    <th width="60%">
                                        Category
                                    </th>
                                    <th width="40%">
                                        Action
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(function(category) {%>
                                        <tr cat_id="<%= category._id%>">
                                            <td>
                                                <%= category.name%>
                                            </td>
                                            <td>
                                                <a class="edit btn btn-sm green" href="javascript:;" title="edit"><i class="fa fa-pencil"></i></a>
                                                <a class="delete btn btn-sm red" href="javascript:;" title="delete"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    <%});%>
                                    
							</tbody>
							</table>
                    </div>
                </div>

            </div>
            
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                              <div class="caption">
                                <i class="icon-social-dropbox"></i> <span>Posts</span>
                              </div>
                              <div class="tools">
                                <a href="#" class="collapse" data-original-title="" title="">
                                </a>
                              </div>
                            </div>
                            <div class="portlet-body">
                                <table class="table table-striped table-bordered table-hover" id="post_table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Category
                                            </th>
                                            <th>
                                                Content
                                            </th>
                                            <th>
                                                Client Name
                                            </th>
                                            <th>
                                                Created Date
                                            </th>
                                            <th>
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="post_tbody">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                              <div class="caption">
                                <i class="icon-note"></i> <span>Post Edit</span>
                              </div>
                              <div class="tools">
                                <a href="#" class="collapse" data-original-title="" title="">
                                </a>
                              </div>
                            </div>
        
                            <div class="portlet-body form">
                                <form class="form-horizontal" role="form">
                                    
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Name</label>
                                                    <div class="col-md-8">
                                                        <input type="text" class="form-control" id="fullname" name="fullname">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Email</label>
                                                    <div class="col-md-10">
                                                        <input type="email" class="form-control" id="email" name="email">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label class="col-md-2 control-label">Phone</label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" id="phone" name="phone">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-1 control-label">Category</label>
                                            <div class="col-md-10">
                                                <select class="select2me input-xlarge" name="category" id="category">
                                                    <% categories.forEach(function(category) {%>
                                                    <option value="<%= category._id%>"><%= category.name%></option>
                                                    <%});%>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-1 control-label">Title</label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" name="title" id="title">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <textarea class="ckeditor form-control" id="content" name="content" rows="20"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-1 control-label">Attachment</label>
                                            <div class="col-md-10">
                                                <input type="file" class="form-control" name="files" id="files" multiple>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-12 text-center">
                                                <button type="button" class="btn green" id="btn_save"><i class="fa fa-check"></i> Submit</button>
                                                <button type="reset" class="btn default" id="btn_reset"><i class="icon-refresh"></i>Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-modal-lg" id="preview" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title text-success"><i class="icon-eye"></i> Preview</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <i class="fa fa-user text-danger pull-left"></i>
                        <label class="bold col-md-3" id="label_name"></label>
                        <i class="fa fa-envelope-o text-danger pull-left"></i>
                        <label class="bold col-md-3" id="label_email"></label>
                        <i class="fa fa-phone text-danger pull-left"></i>
                        <label class="bold col-md-2" id="label_phone"></label>
                        <i class="fa fa-calendar pull-left text-danger"></i>
                        <label class="col-md-3 bold" id="label_created_at"></label>
                        <i class="fa fa-tags pull-left text-danger"></i>
                        <label class="col-md-2 bold" id="label_category"></label>
                    </div>
                    
                </div><hr>
                <div class="row">
                    <div class="col-md-12">
                        <h2 id="post_title"></h2>
                        <div id="preview_body">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script src="../../js/admin.js"></script>